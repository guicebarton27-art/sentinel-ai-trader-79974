# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_PUBLISHABLE_KEY=your_publishable_anon_key
VITE_SUPABASE_PROJECT_ID=your_project_id

# Server-side Supabase keys (for workers/edge functions)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_publishable_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Trading API Keys (Configure in app settings)
# KRAKEN_API_KEY=your_kraken_api_key
# KRAKEN_API_SECRET=your_kraken_api_secret

# Encryption key for stored API secrets (server-side only)
# API_ENCRYPTION_KEY=your_32_char_encryption_key

# Optional: Environment
# VITE_ENV=development

# Execution safety
LIVE_TRADING_ENABLED=false
KILL_SWITCH_ENABLED=true

# Risk controls
MAX_TRADES_PER_HOUR=5
COOLDOWN_MINUTES_AFTER_LOSS=30
MAX_CONSECUTIVE_LOSSES=3

# Worker settings
WORKER_TICK_INTERVAL_MS=60000
SUPABASE_FUNCTIONS_URL= # Optional override (e.g. http://127.0.0.1:54321/functions/v1)
